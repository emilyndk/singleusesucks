---
import Button from './Button.astro';
import { Image } from 'astro:assets';
import tee from "../assets/images/tshirt.png";
import dancingturtle from "../assets/images/turtle.png";
import kop from "../assets/images/kopsus.png";
import merchbg from "../assets/images/merchbackg.jpg";
import trash2 from "../assets/images/trash2.png"
import trash4 from "../assets/images/trash4.png"
---

<section class="h-screen" id="merch">
    <div class="h-screen w-full absolute scrollzoom overflow-clip">
        <Image src={merchbg} class="scrollzoomimg h-full w-full object-cover" alt="Undervands-billede"/>
        <span class="absolute inset-0 bg-black/40"></span>
    </div>
    
    <div class="pb-11">
    <h2 class="uppercase relative top-16 pl-[45rem] font-[campton-xb] text-hvid text-7xl pb-8">merchandise</h2>
    <h3 class="relative top-16 pl-[50rem] font-[tiempos] text-hvid text-3xl pb-4">Clean seas, clean style ₊ ⊹</h3>
    <p class="relative top-16 pl-[53rem] font-[tiempos] text-hvid text-lg leading-normal">Vi donerer 5% af omsætningen til havet... året rundt! <br>
        Plastic Change merchandise produceres og distribueres af <span class="font-[tiempos-italic] underline cursor-pointer hover:text-pink">Hjemhavn ApS</span>.</p>
        </div>
    
    <div class="relative top-16 pl-[1192px] font-[campton-xb] text-hvid text-lg leading-normal">
    <Button variant="primary" size="large">
        <span class="inline-block align-middle pr-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 46 46" fill="none">
