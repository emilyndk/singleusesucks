        <Image src={amc} alt="AMC logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={ricoh} alt="Ricoh logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={rema} alt="Rema logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={lastobject} alt="Last Object logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={hjemhavn} alt="Hjemhavn logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={ironpump} alt="Ironpump logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={araven} alt="Araven logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={friluft} alt="Friluftsland logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={blackcotton} alt="Black Cotton logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={myphoner} alt="Myphoner logo" class="w-20 max-w-[100px]" loading="lazy" />

        <!-- Duplicate set of images -->
        <Image src={lidl} alt="Lidl logo" class="w-20 max-w-[100px]" loading="lazy" />
