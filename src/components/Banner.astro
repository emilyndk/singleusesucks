        <Image src={myphoner} alt="Myphoner logo" class="w-20 max-w-[100px]" loading="lazy" />
    </div>
</section>



<style>

    
    @keyframes scroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); } /* Adjusted to account for duplication */
    }

    .animate-scroll {
        display: flex;
        animation: scroll 20s linear infinite; /* Adjust duration to fit your needs */
    }
</style>

