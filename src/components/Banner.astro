        <Image src={hjemhavn} alt="Hjemhavn logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={ironpump} alt="Ironpump logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={araven} alt="Araven logo" class="w-20 max-w-[100px]" loading="lazy" />
        <Image src={friluft} alt="Friluftsland logo" class="w-20 max-w-[100px]" loading="lazy" />
