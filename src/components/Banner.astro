<style>
.rullende_brands {
  width: 100%;
  height: auto;
  overflow: hidden;
  position: relative;
  z-index: 3;
  opacity: 1;
  padding: 20px 0; 
   border-top: 5px dashed var(--blue);
  border-bottom: 5px dashed var(--blue);
}

.brands {
    display: flex;
     align-items: center;
     gap: 55px;
     width: 200%;
     height: auto;
  animation: scroll 24s linear infinite;
  left: -100%; /* Start fra h√∏jre side af containeren */
  opacity: 1;
}

@keyframes scroll {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}



@media (min-width: 800px) {
      /******* Rullende text ************/
.rullende_brands {
  border-top: 10px dashed var(--blue);
  border-bottom: 10px dashed var(--blue);
  background-color: var(--grey);
}

.brands {
     gap: 150px;
    width: 100%;
    height: auto;
}

}
</style>